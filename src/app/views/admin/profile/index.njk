{% extends "layouts/admin-layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin/forms.css">
    <title>Minha Conta | Foodfy</title>
{% endblock %}

{% block content %}
    <div class="container">
        <form action="/admin/profile?_method=PUT" method="POST">
            <div class="title">
                <h2>Bem vindo(a),  {{user.name}}</h2>

                <div>
                    <button class="btn" type="submit" onclick="Validate.allFields(event)"
                    >Salvar</button>
                </div>
            </div>
            
            <div class="fields">            
                <div class="item">            
                    <div>Nome</div>
                    <div>
                        <input
                            type="text"
                            name="name"
                            placeholder="Digite o nome completo"
                            value="{{user.name}}"
                        >
                    </div>
                </div>

                <div class="item">
                    <div>Email</div>
                    <div>
                        <input
                            type="email"
                            name="email"
                            placeholder="Digite o email"
                            value="{{user.email}}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>

                <div class="item">
                    <div>Senha</div>
                    <div>
                        <input
                            type="password"
                            name="password"
                            placeholder="Digite sua senha para atualizar seu cadastro"
                        >
                    </div>
                </div>
            </div>                      
        </form>
    </div>
{% endblock %}