{% extends "layouts/admin-layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/chefs/chefs-list.css">
    <title>Gerenciar chefs | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="admin container">
            <div class="title">
                <h2>Gerenciar chefs</h2> 
                {% if session.isAdmin %}
                    <a class="btn" href="/admin/chefs/create">Novo chef</a>
                {% endif %}
            </div>

            <section class="chef-container">
                {% for chef in chefs %}
                    <div class="chef" data-id={{chef.id}}>
                        <img src="{{chef.image}}" alt="imagem de {{chef.name}}">
                        
                        <div>
                            <h3>{{chef.name}}</h3>
                            {% if total_recipes %}
                                <p class="title">{{chef.total_recipes}} receitas</p>
                            {% else %}
                                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </section>
    </section>
    {% include "templates/includes/pagination.njk" %}
{% endblock %}