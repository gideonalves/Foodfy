{% extends "layouts/admin-layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin/forms.css">
    <title>Minha Conta | Foodfy</title>
{% endblock %}

{% block content %}
    <div class="container">
        <form action="/admin/profile?_method=PUT" method="POST">
              <div class="title">
                <h2>Bem vindo(a),  {{user.name}}</h2>

                <div>
                    <button class="btn" type="submit" onclick="Validate.allFields(event)">Salvar</button>
                </div>
            </div>

            <div class="fields">
                   {% include "templates/includes/users/profile-fields.njk" %}
            </div>          
        </form>
    </div>
{% endblock %}