{% extends "layouts/admin-layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin/forms.css">
    <title>Criar Usuário | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="container">
        <form  action="/admin/users/register" method="POST">
            <div class="title">
                <h2>Criar Usuário</h2>

                <div>
                    <button class="btn" type="submit" onclick="Validate.allFields(event)">Salvar</button>
                    <a href="/admin/users" class="btn cancel">Cancelar</a>    
                </div>
            </div>     
            <div class="fields">                 
                <div class="item">
                    <div>Nome</div>
                    <div>
                        <input
                            type="text"
                            name="name"
                            placeholder="Digite o nome completo"
                            value="{{user.name}}"
                        >
                    </div>
                </div>

                <div class="item">
                    <div>Email</div>
                    <div>
                        <input
                            type="email"
                            name="email"
                            placeholder="Digite o email"
                            value="{{user.email}}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <div class="item">
                <div>
                    <li>
                        <input
                            type="checkbox"
                            name="is_admin"
                            {% if user.is_admin == "true" %}
                                checked
                            {% endif %}
                            value="true"
                        >
                        Administrador
                    </li>
                </div>
            </div>
        </form>
    </section>
{% endblock %}