{% extends "layouts/session-layout.njk" %}

{% block head %}
    {# <link rel="stylesheet" href="/styles/sessions/index.css">
    <link rel="stylesheet" href="/styles/admin/forms.css"> #}
    <title>Nova Senha | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="session container">
      <form action="/admin/password-reset" method="POST">
            <div class="title">
                <h2>Nova Senha</h2>
            </div>

            <div class="item">
                <div>Email</div>
                <div>
                    <input
                        type="email"
                        name="email"
                        placeholder="Digite seu email"
                        required
                        value="{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>

            <div class="item">
                <div>Nova senha</div>
                <div>
                    <input
                        type="password"
                        name="password"
                        placeholder="Digite sua nova senha"
                        required
                    >
                </div>
            </div>

            <div class="item">
                <div>Repetir senha</div>
                <div>
                    <input
                        type="password"
                        name="password_repeat"
                        placeholder="Repita a nova senha"
                        required
                    >
                </div>
            </div>           

            <input type="hidden" name="token" value="{{token}}">

            <div class="footer">
                <ul>
                    <li class="button-wrapper">
                        <button class="btn" type="submit">Nova Senha</button>
                    </li>
                </ul>
            </div>
      </form>
   </section>   
{% endblock %}