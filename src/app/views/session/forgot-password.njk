{% extends "layouts/main.njk" %} 

{% block head %}
    <link rel="stylesheet" href="/styles/sessions/index.css">
    <link rel="stylesheet" href="/styles/admin/forms.css">
    <title>Recuperar Senha | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="session container">
        <form  action="/admin/forgot-password"  method="POST">
            <div class="title">
                <h2>Esqueceu a Senha?</h2>
            </div>
            <div class="item">
                <div>Email</div>
                    <div>
                        <input 
                            type="email" 
                            name="email"
                            placeholder="Digite seu email para recuperar sua senha" 
                            value="{{ user.email }}" 
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
            </div>

            <div class="footer">
                    <ul>
                        <li>
                            <a href="/admin/login">Voltar</a>
                        </li>
                        <li>
                            <button class="btn" type="submit">Recuperar</button>
                        </li>
                    </ul>
                </div>
        </form>
    </section>
{% endblock %}