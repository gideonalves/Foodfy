{% extends "layouts/main.njk" %} 

{% block head %}
    <link rel="stylesheet" href="/styles/sessions/index.css">
    <link rel="stylesheet" href="/styles/admin/forms.css">
    <title>Login | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="session container">

        <form action="/admin/login" method="POST">
            <div class="title">
                <h2>Iniciar Sess√£o</h2>
            </div>

            <div class="item">
                <div>Email</div>
                <div>
                    <input 
                        type="email" 
                        name="email"
                        value="{{ user.email }}" 
                        placeholder="Digite seu email" 
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>
            
            <div class="item">
                <div>Senha</div>
                <div>
                    <input 
                        type="password" 
                        name="password" 
                        placeholder="Digite sua senha"
                    >
                </div>
            </div>

            <div class="footer">
                <ul>
                    <li>
                        <a href="/admin/forgot-password">Perdeu a senha?</a> 
                    </li>
                    <li>
                        <button onclick="Validate.allFields(event)" class="btn" type="submit">Acessar</button>
                    </li>
                </ul>
            </div>
        </form>
    </section>
{% endblock %}